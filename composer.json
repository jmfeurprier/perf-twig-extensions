{
    "name" : "perf/twig-extensions",
    "description" : "perf Twig extensions",
    "license" : "mit",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "symfony/property-access": "^5.3",
        "twig/twig": "^3.0"
    },
    "suggest": {
        "ext-intl": "Required for localized date and time formatting."
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "perf\\TwigExtensions\\": "src"
        }
    },
    "require-dev": {
        "phing/phing": "^2.17",
        "phpmd/phpmd": "^2.10",
        "phpunit/phpunit": "^9.5",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
